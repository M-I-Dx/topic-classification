{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "flask-debug",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    },
    {
      "name": "local-debug",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/local.py",
      "args": ["--mode=embed", "--seq=hello world"],
    },
    {
      "name": "test-this-file",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
